{
  "name": "schema-generator",
  "displayName": "JSON Schema Generator",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "activationEvents": [
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateJsonSchema",
        "title": "Generate JSON Schema"
      },
      {
        "command": "extension.generateFakerMock",
        "title": "Generate Faker Mock Code"
      },
      {
        "command": "extension.generateJsonMock",
        "title": "Generate Mock JSON"
      },
      {
        "command": "extension.generateFakerMockFromTs",
        "title": "Generate Faker Mock Code (Directly)"
      },
      {
        "command": "extension.generateJsonMockFromTs",
        "title": "Generate Mock JSON (Directly)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.generateJsonSchema",
          "when": "editorLangId == typescript",
          "group": "generation@1"
        },
        {
          "command": "extension.generateFakerMockFromTs",
          "when": "editorLangId == typescript",
          "group": "generation@2"
        },
        {
          "command": "extension.generateJsonMockFromTs",
          "when": "editorLangId == typescript",
          "group": "generation@3"
        },
        {
          "command": "extension.generateFakerMock",
          "when": "resourceFilename =~ /.*\\.schema\\.json$/",
          "group": "generation_from_file"
        },
        {
          "command": "extension.generateJsonMock",
          "when": "resourceFilename =~ /.*\\.schema\\.json$/",
          "group": "generation_from_file"
        }
      ],
      "explorer/context": []
    },
    "configuration": {
      "title": "DeepSeek",
      "properties": {
        "deepseek.apiKey": {
          "type": "string",
          "description": "DeepSeek API密钥"
        },
        "deepseek.apiUrl": {
          "type": "string",
          "default": "https://api.deepseek.com/v1",
          "description": "API端点地址"
        }
      }
    }
  },
  "description": "",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.5.1",
    "openai": "^4.86.2",
    "ts-json-schema-generator": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/vscode": "^1.98.0",
    "typescript": "^4.9.5",
    "vscode": "^1.1.37"
  }
}
