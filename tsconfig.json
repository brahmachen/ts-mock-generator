{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES6",
    "types": ["node"],
    "outDir": "out",
    "lib": [
      "ES6"
    ],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}